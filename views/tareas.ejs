
    <%- include ('templates/header') %> 
  
    <div class="container">
      <div class="row">

        <div class="col-md-4">
          <div class="card mt-5">
            <div class="card-body">

              <form action="/agregar" method="POST">
                <div class="d-flex justify-content-center">
                  <h4>Nueva Tarea</h4>
                </div>
                <div class="form-group mb-3">
                  <input type="text" name="title" class="form-control" placeholder="Nombre">
                </div>
                <div class="form-group mb-3">
                  <textarea name="description"  rows="8" cols="30" class="form-control" placeholder="Descripcion"></textarea>
                </div>

                <div class="d-grid col-6 mx-auto">
                  <button  class="btn btn-primary" type="submit">Agregar</button>

                </div>
             
      
              </form>
            </div>
          </div>

        </div>
        <div class="col-md-8">
          <div class="mt-5">
           
            <div class="d-flex justify-content-center ">
              <h3>Lista de Tareas</h3>
            </div>
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th class="col-1" scope="col">#</th>
                  <th class="col-2" scope="col">Nombre</th>
                  <th class="col-4" scope="col">Descripcion</th>
                  <th class="col-3" scope="col">Operacion</th>
                  <th class="col-2" scope="col">Estado</th>


                </tr>

              </thead>
              <tbody>
                <% for(var i=0; i < tasks.length; i++) { %>
                  <%let estado="Pendiente"%>
                  <tr>
                    <td><%= i + 1%></td>
                    <td><strong><%= tasks[i].title %></strong></td>
                    <td><%= tasks[i].description %></td>
                    <td class="d-flex gap-1 justify-content-center">
                      <a href="/editar/<%= tasks[i]._id %>"
                        class="btn btn-warning">
                        Editar
                      </a>
                      <a href="/delete/<%= tasks[i]._id %>"
                        class="btn btn-danger">
                        Eliminar
                      </a>
                    </td>
                    <td >
                      <a
                      class="<%= tasks[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                      href="/estado/<%= tasks[i]._id %>">
                      <%=tasks[i].status ? estado="Completa":estado="Pendiente"%>
                      
                    </a>
                    </td>
                  </tr>
                <% } %>

              </tbody>
            
            </table>
          </div>
       
        </div>


      

      </div>
    </div>

    <%- include ('templates/footer') %> 

